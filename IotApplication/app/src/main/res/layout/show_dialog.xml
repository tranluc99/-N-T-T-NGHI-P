<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:background="@drawable/ic_bg_white_conner"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:background="@drawable/ic_bg_yellow_conner"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:textAlignment="center"
        android:text="Add device"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    </TextView>
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Please fill out information"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:id="@+id/edt_name"
            android:background="@drawable/ic_bg_white_conner_border_gray"
            android:hint="Name Device"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <LinearLayout

            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_ok"
                android:layout_toStartOf="@id/btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"></Button>
            <Button
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>