<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HistoryFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:padding="10dp"
            android:textColor="#DC1010"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="HISTORY LIST DEVICE"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/list_device_sensor"
            android:text="List Device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.jaredrummler.materialspinner.MaterialSpinner>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_marginTop="5dp"
            android:id="@+id/list_device_control_1"
            android:text="List Device Control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.jaredrummler.materialspinner.MaterialSpinner>

            <ir.androidexception.datatable.DataTable
                android:id="@+id/data_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:header_gravity="center"
                app:row_gravity="center"
                app:header_vertical_padding="16dp"
                app:header_horizontal_padding="0dp"
                app:row_vertical_padding="16dp"
                app:header_text_size="5sp"
                app:row_text_size="5sp"
                app:row_text_color="#2196F3"
                app:header_text_color="#8DE625"
                app:row_background_color="#F8F8F8"
                app:header_background_color="#00BCD4"
                app:persian_number="false"
                app:corner_radius="8dp"
                app:direction="ltr"

                app:shadow="8dp"/>

    </LinearLayout>


</FrameLayout>